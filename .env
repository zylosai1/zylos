PROJECT_NAME=ZylosAI
API_V1_STR=/api
HOST=0.0.0.0
PORT=8000

# Database: choose sqlite or supabase
DATABASE_MODE=sqlite
DATABASE_URL=sqlite:///app/data/memory.db
# DATABASE_MODE=supabase
# DATABASE_URL=postgresql+psycopg2://<user>:<pass>@<host>:5432/<db>
        
        # Optional: Redis for pub/sub & scaling
        REDIS_URL=redis://localhost:6379/0
        
        # Supabase: only if using Supabase for other services
        SUPABASE_URL=
        SUPABASE_KEY=
        
        # Security
        SECRET_KEY=replace_with_strong_random_secret
        ACCESS_TOKEN_EXPIRE_MINUTES=10080
        
        # Model config
        MODEL_CLI_CMD=gpt4all
        MODEL_PATH=app/models/local_models/phi3.bin
        
        # Optional: tesseract command (Windows)
        TESSERACT_CMD=
        
        # Debug
        DEBUG=True